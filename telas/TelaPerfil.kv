


#:include telas/widgets_config.kv
#:include telas/Menu.kv


################################################################################
# Tela de Perfil
################################################################################
<TelaPerfil>:
    lb_login: lb_login
    lb_nome: lb_nome
    img_perfil: img_perfil
    layout_postagens:layout_postagens
    layout_botoes:layout_botoes


    ScrollView:
        
        BoxLayout:
            Menu:
           

            GridLayout:
                cols: 2
                padding: 0

                TextInput:
                    id: txt_busca
                    size_hint_x:3
                
                BotaoImagem:
                    size_hint: None, None
                    size: dp(30), dp(30)
                    source:'img/lupa.png'
                    on_press:root.carregar_perfil(txt_busca.text)

                   


            GridLayout:
                cols: 2
                padding: 0

                BotaoImagem:
                    id: img_perfil
                
                Label:
                    id: lb_login
                    font_size: '25sp'




            Label:
                id: lb_nome


            GridLayout:

                id:layout_botoes 
                cols: 2

            
            #Button:
                #text: 'Nova postagem '
                #on_press:
                    #root.manager.transition.direction = 'left'
                    #root.manager.current = 'telapostar'

            #Button:
                #text: 'Feed '
                #on_press:
                    #root.manager.transition.direction = 'left'
                   # root.manager.current = 'feed' 

           

            Button:
                text: 'Sair'
                on_press: root.sair()
                font_name: 'Arial'
                font_size: '18sp'
                color:'#ffffff'


            BoxLayout:
                id:layout_postagens
                canvas.before:
                    Color:
                        rgba:255, 255, 255, 0.5
                    Rectangle:
                        size: self.size
                        pos: self.pos 
                 
            Label: 
                font_size: '14sp'
                text: '√çcones feito por www.freepik.com'  
                halign: 'center'
                
                  