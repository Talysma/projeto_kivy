#:include telas/widgets_config.kv
#:include telas/Menu.kv


################################################################################
# Tela de Editar Perfil
################################################################################
<TelaEditarPerfil>:
    lb_msg: lb_msg
    txt_nome: txt_nome

    ScrollView:
        
        BoxLayout:
            Menu:

            Label:
                text: '[b]Edite seu perfil[/b]'
                font_size: '32sp'
                color:'#ffffff'
                font_name: 'Arial'
            
            Label:
                text:'Preencha  os campos que deseja alterar !\n'
                font_size: '20sp'
                color:'#ffffff'
                font_name: 'Arial'


            Label:
                text: 'Nome'

            TextInput:
                id: txt_nome

            Label:
                text: 'Senha'

            TextInput:
                id: txt_senha1
                password: True

            Label:
                text: 'Confirme a senha'

            TextInput:
                id: txt_senha2
                password: True

            Label:
                id: lb_msg
            
            Button:
                text: 'salvar'
                font_name: 'Arial'
                font_size: '18sp'
                color:'#ffffff'
                on_press: root.enviar(txt_senha1.text, txt_senha2.text, txt_nome.text)



            Label: 
                font_size: '14sp'
                text: '√çcones feito por www.freepik.com'
                halign: 'center'