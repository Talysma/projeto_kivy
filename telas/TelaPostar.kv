
#:include telas/widgets_config.kv
#:include telas/Menu.kv

# Tela Postar
################################################################################
<TelaPostar>:
    lb_msg: lb_msg

    ScrollView:
        
        BoxLayout:
            Menu:

            Label:
                text: '[b]Nova postagem[/b]'
                font_size: '32sp'
                color:'#ffffff'
                font_name: 'Arial'
            

           
            TextInput:
                id: txt_texto

            
            Button:
                text: 'Postar'
                on_press: root.postar(txt_texto.text)
                font_name: 'Arial'
                font_size: '18sp'
                color:'#ffffff'
            
            

            Label:
                id:lb_msg


            Label: 
                font_size: '14sp'
                text: '√çcones feito por www.freepik.com'
                halign: 'center'